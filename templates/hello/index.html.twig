{% extends "base.html.twig" %}
{% block body %}
	{% if messages|length > 0 %}
		{% for key,message in messages|slice(0, limit) %}
			<div>
				<a href={{path("showone_message", {id: key} )}}>
					{{message.message}}
				</a>
			</div>
			{{ include("hello/_messagedate.html.twig", {message:message}) }}
		{% endfor %}
	{% else %}
		No messages to show
	{% endif %}
{% endblock body %}
